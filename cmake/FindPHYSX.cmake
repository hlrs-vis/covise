  # rest of the world
  SET(PHYSX_LIBRARIES ${PHYSX_LIBRARY} ${PHYSX_LL_LIBRARY} ${PHYSX_COMMON_LIBRARY} ${PHYSX_EXTENSIONS_LIBRARY} ${PHYSX_VD_LIBRARY} ${PHYSX_COOKING_LIBRARY})

