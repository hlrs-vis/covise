  $ENV{EXTERNLIBS}/PhysX/lib/
    PATH_SUFFIXES lib lib64
    DOC "PHYSX_LL - Library (Debug)"
  )
  FIND_LIBRARY(PHYSX_COMMON_LIBRARY_DEBUG NAMES ${PHYSX_COMMON_DBG_NAMES}
    PATHS
    $ENV{PHYSX_HOME}
  $ENV{EXTERNLIBS}/PhysX/Lib/vc11win64
  $ENV{EXTERNLIBS}/PhysX/lib/
    PATH_SUFFIXES lib lib64
    DOC "PHYSX_COMMON - Library (Debug)"
  )
  FIND_LIBRARY(PHYSX_EXTENSIONS_LIBRARY_DEBUG NAMES ${PHYSX_EXTENSIONS_DBG_NAMES}
    PATHS
    $ENV{PHYSX_HOME}
  $ENV{EXTERNLIBS}/PhysX/Lib/vc11win64
  $ENV{EXTERNLIBS}/PhysX/lib/
    PATH_SUFFIXES lib lib64
    DOC "PHYSX_EXTENSIONS - Library (Debug)"
  )
  FIND_LIBRARY(PHYSX_VD_LIBRARY_DEBUG NAMES ${PHYSX_VD_DBG_NAMES}
    PATHS
    $ENV{PHYSX_HOME}
  $ENV{EXTERNLIBS}/PhysX/Lib/vc11win64
  $ENV{EXTERNLIBS}/PhysX/lib/
    PATH_SUFFIXES lib lib64
    DOC "PHYSX_VD - Library (Debug)"
  )
  FIND_LIBRARY(PHYSX_COOKING_LIBRARY_DEBUG NAMES ${PHYSX_COOKING_DBG_NAMES}
    PATHS
    $ENV{PHYSX_HOME}
  $ENV{EXTERNLIBS}/PhysX/Lib/vc11win64
  $ENV{EXTERNLIBS}/PhysX/lib/
    PATH_SUFFIXES lib lib64
    DOC "PHYSX_COOKING - Library (Debug)"
  )
  
  
  IF(PHYSX_LIBRARY_DEBUG AND PHYSX_LIBRARY)
    SET(PHYSX_LIBRARIES optimized ${PHYSX_LIBRARY} debug ${PHYSX_LIBRARY_DEBUG} optimized ${PHYSX_LL_LIBRARY} debug ${PHYSX_LL_LIBRARY_DEBUG} optimized ${PHYSX_COMMON_LIBRARY} debug ${PHYSX_COMMON_LIBRARY_DEBUG} optimized ${PHYSX_EXTENSIONS_LIBRARY} debug ${PHYSX_EXTENSIONS_LIBRARY_DEBUG} optimized ${PHYSX_VD_LIBRARY} debug ${PHYSX_VD_LIBRARY_DEBUG} optimized ${PHYSX_COOKING_LIBRARY} debug ${PHYSX_COOKING_LIBRARY_DEBUG})
  ENDIF(PHYSX_LIBRARY_DEBUG AND PHYSX_LIBRARY)

  FIND_PACKAGE_HANDLE_STANDARD_ARGS(PHYSX DEFAULT_MSG PHYSX_LIBRARY PHYSX_LIBRARY_DEBUG PHYSX_LL_LIBRARY PHYSX_LL_LIBRARY_DEBUG PHYSX_COMMON_LIBRARY PHYSX_COMMON_LIBRARY_DEBUG PHYSX_EXTENSIONS_LIBRARY PHYSX_EXTENSIONS_LIBRARY_DEBUG PHYSX_VD_LIBRARY PHYSX_VD_LIBRARY_DEBUG PHYSX_COOKING_LIBRARY PHYSX_COOKING_LIBRARY_DEBUG PHYSX_INCLUDE_DIR)

  MARK_AS_ADVANCED(PHYSX_LIBRARY PHYSX_LIBRARY_DEBUG PHYSX_LL_LIBRARY PHYSX_LL_LIBRARY_DEBUG PHYSX_COMMON_LIBRARY PHYSX_COMMON_LIBRARY_DEBUG PHYSX_EXTENSIONS_LIBRARY PHYSX_EXTENSIONS_LIBRARY_DEBUG PHYSX_VD_LIBRARY PHYSX_VD_LIBRARY_DEBUG PHYSX_COOKING_LIBRARY PHYSX_COOKING_LIBRARY_DEBUG PHYSX_INCLUDE_DIR)
  
