  MARK_AS_ADVANCED(PHYSX_LIBRARY PHYSX_LL_LIBRARY PHYSX_COMMON_LIBRARY PHYSX_EXTENSIONS_LIBRARY PHYSX_VD_LIBRARY PHYSX_COOKING_LIBRARY PHYSX_INCLUDE_DIR)
  
ENDIF(MSVC)

