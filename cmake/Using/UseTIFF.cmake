MACRO(USE_TIFF)
  FIND_PACKAGE(TIFF)
  IF ((NOT TIFF_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing TIFF")
    RETURN()
  ENDIF((NOT TIFF_FOUND) AND (${ARGC} LESS 1))
  IF(NOT TIFF_USED AND TIFF_FOUND)
    SET(TIFF_USED TRUE)
    INCLUDE_DIRECTORIES(${TIFF_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${TIFF_LIBRARIES} ${ZLIB_LIBRARIES})
  ENDIF()
ENDMACRO(USE_TIFF)

