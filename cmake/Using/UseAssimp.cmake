MACRO(USE_ASSIMP)
  covise_find_package(ASSIMP)
  IF ((NOT ASSIMP_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing ASSIMP")
    RETURN()
  ENDIF((NOT ASSIMP_FOUND) AND (${ARGC} LESS 1))
  IF(NOT ASSIMP_USED AND ASSIMP_FOUND)
    SET(ASSIMP_USED TRUE)
	USE_BOOST()
	set(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${ASSIMP_LINK_FLAGS}")
    set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${ASSIMP_CXX_FLAGS}")
    INCLUDE_DIRECTORIES(SYSTEM ${ASSIMP_INCLUDE_DIRS})
	LINK_DIRECTORIES(${ASSIMP_LIBRARY_DIRS})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${ASSIMP_LIBRARIES})
  ENDIF()
ENDMACRO(USE_ASSIMP)

