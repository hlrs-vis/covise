MACRO(USE_JAKA)
  covise_find_package(JAKA)
  IF ((NOT JAKA_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing JAKA")
    RETURN()
  ENDIF((NOT JAKA_FOUND) AND (${ARGC} LESS 1))
  IF(NOT JAKA_USED AND JAKA_FOUND)
    SET(JAKA_USED TRUE)
    ADD_DEFINITIONS(-DHAVE_JAKA)
    INCLUDE_DIRECTORIES(SYSTEM ${JAKA_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${JAKA_LIBRARIES})
  ENDIF()
ENDMACRO(USE_JAKA)
  
