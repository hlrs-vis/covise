MACRO(USE_OPENCV)
  FIND_PACKAGE(OpenCV)
  IF ((NOT OPENCV_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing OPENCV")
    RETURN()
  ENDIF((NOT OPENCV_FOUND) AND (${ARGC} LESS 1))
  IF(NOT OPENCV_USED AND OPENGL_FOUND)
    SET(OPENCV_USED TRUE)
    INCLUDE_DIRECTORIES(${OPENCV_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OPENCV_LIBRARIES})
  ENDIF()
ENDMACRO(USE_OPENCV)
