MACRO(USE_SNAPPY)
   COVISE_FIND_PACKAGE(SNAPPY)
   IF ((NOT SNAPPY_FOUND) AND (${ARGC} LESS 1))
      USING_MESSAGE("Skipping because of missing SNAPPY")
    RETURN()
 ENDIF((NOT SNAPPY_FOUND) AND (${ARGC} LESS 1))
 IF(NOT SNAPPY_USED AND SNAPPY_FOUND)
    SET(SNAPPY_USED TRUE)
    ADD_DEFINITIONS(-DHAVE_SNAPPY)
    INCLUDE_DIRECTORIES(${SNAPPY_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${SNAPPY_LIBRARIES})
  ENDIF()
ENDMACRO(USE_SNAPPY)
  
