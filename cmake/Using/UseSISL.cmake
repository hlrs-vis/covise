MACRO(USE_SISL)
  covise_find_package(SISL)
  IF ((NOT SISL_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing SISL")
    RETURN()
  ENDIF((NOT SISL_FOUND) AND (${ARGC} LESS 1))
  IF(NOT SISL_USED AND SISL_FOUND)
    SET(SISL_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${SISL_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${SISL_LIBRARY})
  ENDIF()
ENDMACRO(USE_SISL)
  
