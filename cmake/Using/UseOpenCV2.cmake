MACRO(USE_OPENCV2)
  COVISE_FIND_PACKAGE(OpenCV2)
  IF ((NOT OPENCV2_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing OpenCV2")
    RETURN()
  ENDIF((NOT OPENCV2_FOUND) AND (${ARGC} LESS 1))
  IF(NOT OPENCV2_USED AND OPENCV2_FOUND)
    SET(OPENCV2_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${OPENCV2_INCLUDE_DIR})
    INCLUDE_DIRECTORIES(SYSTEM ${OPENCV2_INCLUDE_DIR}/opencv)
    INCLUDE_DIRECTORIES(SYSTEM ${OPENCV2_INCLUDE_DIR}/opencv2)
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OPENCV2_LIBRARIES})
  ENDIF()
ENDMACRO(USE_OPENCV2)
