maxcol=3
col="0"
printentry() {
    printf "${MENU}${OPT}%3s) ${MENU}%-45s" "$1" "$2"
}
newline() {
    if [ "$col" != "0" ]; then
        col="0"
        echo
    fi
}
printmenu() {
    cat=""
    for key in "${keys[@]}"; do
        ncat="${categories[$key]}"
        if [ "$cat" != "$ncat" ]; then
            cat="$ncat"
            #echo -e "                                                      "
            if [ -n "$cat" ]; then
                if [ "$col" != "0" ]; then
                    echo
                fi
                echo -e "${MENU}-----${TYP} ${cat} ${MENU}-----"
                col="0"
            fi
        fi
        #printf "${MENU}${OPT}%3s) ${MENU}%-45s" "$key" "${titles[$key]}"
        printentry "$key" "${titles[$key]}"
        col=$((${col}+1))
        if [ "$col" -ge "$maxcol" ]; then
            newline
        fi
    done

    newline
    echo -e "                                                      "
    printentry "q" "exit this menu"
    echo
    echo -e "${MENU}---------------------------------------------"
    echo -e "${ENTER}   Enter choice ([Enter] reprints menu) ${NORMAL}"
}



VERBOSE=0
while [ opt != '' ] 
do

    if [ -z "$1" ]; then
        printmenu

    opt=""
    read opt
    else
        opt="$1"
        shift
    fi

    if [ -n "${commands[$opt]}" ]; then
        echo -e "Starting ${titles[$opt]}..."
        if [ "$VERBOSE" = "1" ]; then
            echo ${commands[$opt]}
        fi
        ${commands[$opt]}
    else

    case $opt in

# MENU

    -v)
        VERBOSE=1
        ;;
	q)
	    exit;
	    ;;
	*)
	    ;;
    esac

fi
done
