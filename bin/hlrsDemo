# some day there will be ansii color
#LSCOLORS=exfxcxdxbxegedabagacad
#export LSCOLORS
#export CLICOLOR=1 
MENU='\033[00;00m'  # white
OPT='\033[32m'      # green
ENTER='\033[33m'    # brown
TYP='\033[36m'      # cyan
NORMAL='\033[m'     # white

#MENU=''
#OPT=''
#ENTER=''
#TYP=''
#NORMAL=''

demo() {
    key="$1"
    title="$2"
    run="$3"

    keys["$key"]="$key"
    titles["$key"]="$title"
    categories["$key"]="$category"

    if [ "$3" = "covise" ]; then
        commands["$key"]="covise -e $4"
    elif [ "$3" = "cover" ]; then
        commands["$key"]="opencover $4"
    elif [ "$3" = "sasu" ]; then
        commands["$key"]="sasuctrl $4"
    elif [ "$3" = "vistle" ]; then
        commands["$key"]="vistle -e $4"
    else
        commands["$key"]="$3"
    fi
}

